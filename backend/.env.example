SECRET_KEY=django-secret-key-placeholder
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================
# BASE DE DATOS
# =============================================

# PostgreSQL (Producción)
DB_NAME=x_advanced_search_db
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_seguro_db
DB_HOST=localhost
DB_PORT=5432

# Usar SQLite en desarrollo
USE_SQLITE=True

# =============================================
# REDIS (Para Celery y Cache)
# =============================================

REDIS_URL=redis://localhost:6379/0

# =============================================
# CORS - Orígenes permitidos para el frontend
# =============================================

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================
# CREDENCIALES X (TWITTER) - PARA EL LOGIN Y SCRAPING
# =============================================

X_USERNAME=tu_usuario_sin_arroba
X_PASSWORD=tu_password_super_secreto
X_EMAIL=tu_email@ejemplo.com

# =============================================
# CONFIGURACIÓN CELERY
# =============================================

# Ejecutar tareas de forma síncrona en desarrollo
CELERY_TASK_ALWAYS_EAGER=True

# =============================================
# URLS Y ENDPOINTS
# =============================================

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# =============================================
# CONFIGURACIÓN DE EMAIL
# =============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_password_de_aplicacion
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@tudominio.com

# =============================================
# ALMACENAMIENTO Y ARCHIVOS
# =============================================

MAX_UPLOAD_SIZE=100
SCRAPING_DATA_DIR=../app/data

# =============================================
# SCRAPING Y TAREAS ASÍNCRONAS
# =============================================

MAX_SCRAPING_RETRIES=5
SCRAPING_DELAY=2
MAX_CONCURRENT_JOBS=3
